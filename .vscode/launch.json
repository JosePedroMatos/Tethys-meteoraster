{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--cov=tasks"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--cov=tasks",
                "-s",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true
        }
        {
            "name": "Python: Debug Current File (With Root)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "MPLBACKEND": "Agg"
            }
        }
    ]
}